<div class="comments">
    {{#each this}}
    <div class="row">
        <div class="col s12 m6">
            <div class="section">
                <section class="comment">
                    <div class="meta">
                        {{user.username}} on {{format_date created_at}}
                    </div>
                    <div class="text">
                        {{comment_text}}
                    </div>
                    <div class="divider"></div>
                </section>
            </div>

        </div>

    </div>

    {{/each}}
</div>